@using YogaCenter.Core.Models.Admin;
@using YogaCenter.Infrastructure.Data.DataModels
@using Microsoft.AspNetCore.Identity
@model IEnumerable<UserViewModel>

@inject UserManager<AppUser> UserManager

@{
    ViewBag.Title = "AddUserToRole";
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
}


<head>
    <style>
        #titleDiv {
            position:center;
            width:1250px;
            padding:40px;
            top: 200px;
        }
        #textDiv {
            
            position:center;
            width:1230px;
            padding:40px;
            top: 300px;
        }
    </style>
</head>
<body>
<div class="text-center row" id="titleDiv">
    <h2 class="text-center">@ViewBag.Title</h2>

    <div class="text-center row" id="textDiv">
        @foreach (var user in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">

                    <h5 class="card-title mt-1">@user.FirstName</h5>
                    <h5 class="card-title mt-1">@user.LastName</h5>
                    <p class="mb-0">Email: @user.Email</p>
                </div>
                @if (user.IsAdministrator == false)
                {

                    <form class="input-group-sm" asp-controller="Admin" asp-action="AddUserToRole" asp-route-userId="@user.Id">
                        <input type="submit" value="Become Administrator" class="fs-6 btn btn-success mb-3 p-2"/>
                    </form>
                }
                else
                {
                    <form class="input-group-sm" asp-controller="Admin" asp-action="RemoveUserFromRole" asp-route-userId="@user.Id">
                        <input type="submit" value="Not Administrator" class="fs-6 btn btn-success mb-3 p-2"/>
                    </form>   
                }
            </div>
        }
    </div>

</div>
</body>







