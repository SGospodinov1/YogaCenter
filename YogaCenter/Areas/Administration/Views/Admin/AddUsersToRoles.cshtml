@using YogaCenter.Core.Models.Admin
@model IEnumerable<AddUserToRoleViewModel>

@{
    ViewBag.Title = "All users";
}

<h1>@ViewBag["Title"]</h1>

<table class="table table-hover">
    <thead>
    <tr>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Email</td>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td><button class="btn btn-success">Buy</button></td>
            <td>
                <a asp-controller="Admin" asp-action="AddToRole" class="btn btn-primary btn-lg"
                   role="button">Add to Role</a>
            </td>
        </tr>
    }
    </tbody>
</table>
