@using YogaCenter.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using YogaCenter.Core.Models.Administrator
@model MyInfoViewModel


@{
    ViewBag.Title = "My info";
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
}




<head>
    <style>
        #titleDiv {
            position:center;
            width:1250px;
            padding:40px;
            top: 200px;
        }
        #textDiv {
            
            position:center;
            width:1230px;
            padding:40px;
            top: 300px;
        }
    </style>
</head>
<body>
<div class="text-center" id="titleDiv">
    <h1 class="display-4">@ViewBag.Title</h1>
    
    <div class="text-center" id="textDiv">
    
        <h3 >Write some words for yourself</h3>
    
    </div>

</div>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Email" class="form-label">Email</label>
                <input asp-for="@Model.Email" class="form-control" aria-required="true" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="hidden" asp-for="@Model.AppUserId" value="@ViewBag.Id" aria-required="true" />
                <span asp-validation-for="AppUserId" class="text-danger"></span>
            </div>
            
        <form class="input-group-sm" asp-area="Administration" asp-controller="Teacher" asp-action="Edit" asp-route-userId="@Model.AppUserId">
            <input type="submit" value="Change Info" class="fs-6 btn btn-danger mb-3 p-2"/>
        </form>
        
        <form class="input-group-sm" asp-area="Administration" asp-controller="Teacher" asp-action="MyClasses" asp-route-userId="@Model.AppUserId">
            <input type="submit" value="My classes" class="fs-6 btn btn-danger mb-3 p-2"/>
        </form>
            

    </div>
</div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}