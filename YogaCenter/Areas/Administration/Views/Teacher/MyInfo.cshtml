@using YogaCenter.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using YogaCenter.Core.Models.Administrator
@model MyInfoViewModel


@{
    ViewBag.Title = "My info";
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
}




<head>
    <style>
        #titleDiv {
            position:center;
            width:1250px;
            padding:40px;
            top: 200px;
        }
        #textDiv {
            
            position:center;
            width:1230px;
            padding:40px;
            top: 300px;
        }
    </style>
</head>
<body>
<div class="text-center" id="titleDiv">
    <h1 class="display-4">@ViewBag.Title</h1>


</div>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <input type="hidden" asp-for="@Model.Id" />
        <div class="mb-3">

            <label asp-for="@Model.FirstName" class="form-label">First Name</label>
            <div>
                <p>@Model.FirstName</p>
            </div>

        </div>
        <div class="mb-3">
            <label asp-for="@Model.LastName" class="form-label">Last Name</label>
            <div>
                <p>@Model.LastName</p>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label">Email</label>
            <div>
                <p>@Model.Email</p>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <div>
                <p>@Model.Description</p>
            </div>
        </div>


        <form asp-area="Administration" asp-controller="Teacher" asp-action="EditInfo" method="get" asp-route-id="@Model.Id">
            <input type="hidden" value="@Model.Id" name="id" />
            <button type="submit" class="fs-6 btn btn-success mb-3 p-2">Edit</button>
        </form>



    </div>
</div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
