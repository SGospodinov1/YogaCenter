@using Microsoft.AspNetCore.Mvc.TagHelpers
@using YogaCenter.Core.Models;
@using System.Globalization
@using YogaCenter.Extensions
@model IEnumerable<YogaClassViewModel>


@{
    
    ViewBag.Title = "Schedule for Yoga Classes";
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
}


<head>
    <style>
        #titleDiv {
            position: center;
            width: 1250px;
            padding: 40px;
            top: 200px;
        }

        #textDiv {
            position: center;
            width: 1230px;
            padding: 40px;
            top: 300px;
        }
    </style>
</head>
<body>
    <div class="text-center row" id="titleDiv">
        <h2 class="text-center">@ViewBag.Title</h2>
        <div class="card-header">
        </div>
        <div class="card-body" id="textDiv">

            <table style="width: 100%" class="table table-hover">
                <thead>
                    <tr>
                        <td>Date</td>
                        <td>Day of week</td>
                        <td>Start</td>
                        <td>End</td>
                        <td>Name</td>
                        <td>Category</td>
                        <td>Teacher</td>
                        <td>Price</td>
                        <td>Participants</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Date</td>
                            <td>@item.DayOfWeek</td>
                            <td>@item.StartTime</td>
                            <td>@item.EndTime</td>
                            <td>@item.Name</td>
                            <td>@item.Category</td>
                            <td>@item.Teacher</td>
                            <td>@item.Price</td>
                            <td>@item.Participants</td>

                            
                            <td>
                                <form asp-area="Administration" asp-controller="Comment" asp-action="AllComments" method="get" asp-route-classId="@item.Id">
                                    <input type="hidden" value="@item.Id" name="classId" />
                                    <button type="submit" class="fs-6 btn btn-success mb-3 p-2">Comments</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

