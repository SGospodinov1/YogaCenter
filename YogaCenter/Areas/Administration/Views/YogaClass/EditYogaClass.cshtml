@using YogaCenter.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using YogaCenter.Core.Models.Administrator
@model EditYogaClassViewModel


@{
    ViewBag.Title = "Edit Yoga Class";
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
    
}




<head>
    <style>
        #titleDiv {
            position: center;
            width: 1250px;
            padding: 40px;
            top: 200px;
        }

        #textDiv {
            position: center;
            width: 1230px;
            padding: 40px;
            top: 300px;
        }
    </style>
</head>
<body>
<div class="text-center" id="titleDiv">
    <h1 class="display-4">@ViewBag.Title</h1>

</div>

<div class="row">
    <form asp-action="EditYogaClass" method="post">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            
            <input type="hidden" asp-for="@Model.Id" />

            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Date" class="form-label">Date</label>
                <input type="date" asp-for="@Model.Date" class="form-control" aria-required="true" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.StartTime" class="form-label">Start Time</label>
                <input type="time"  asp-for="@Model.StartTime" class="form-control" aria-required="true" min="08:00" max="19:00"/>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EndTime" class="form-label">End Time</label>
                <input type="time" asp-for="@Model.EndTime" class="form-control" aria-required="true" min="09:00" max="20:30"/>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label">Category</label>
                <select asp-for="@Model.CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label">Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
               

            <input class="btn btn-primary mt-3" type="submit" value="Submit" />



        </div>

    </form>
</div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
